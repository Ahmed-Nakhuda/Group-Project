@model SSD_Lab1.Models.Order

@{
    ViewData["Title"] = "Create Order";
}

<h1>Create Order</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>


    <div class="form-group mt-2">
        <label asp-for="Province"></label>
        <input asp-for="Province" class="form-control" />
        <span asp-validation-for="Province" class="text-danger"></span>
    </div>


    <div class="form-group mt-2">
        <label asp-for="City"></label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>


    <div class="form-group mt-2">
        <label asp-for="Street"></label>
        <input asp-for="Street" class="form-control" />
        <span asp-validation-for="Street" class="text-danger"></span>
    </div>

    <h4 class="mt-4">Select Products</h4>

    <hr />

    @foreach (var product in ViewBag.Products as List<SSD_Lab1.Models.Product>)
    {
        <div class="form-check mb-3">
            <input type="checkbox" class="form-check-input product-checkbox" name="productIds" value="@product.Id" id="p_@product.Id" />
            <label class="form-check-label" for="p_@product.Id">
                <strong>@product.Name</strong><br />
                Price: @product.Price.ToString("C")<br />
                Company: @product.Company?.Name<br />
                In Stock: @product.StockQuantity<br />
                ID: @product.Id
            </label>
            <input type="number" class="form-control mt-1 quantity-input" name="quantities" placeholder="Quantity" min="1" disabled />
        </div>
    }

    <button type="submit" class="btn btn-primary mt-3">Place Order</button>
</form>

<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>

<!-- import from wwwroot/js/checkbox -->
@section Scripts {
    <script src="~/js/checkbox.js"></script>
}
